<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/grey1">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.728"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ralewaybold"
            android:text="Detail Informasi Akun"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.182"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.913" />

        <Button
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:text="Edit Akun"
            android:textSize="14dp"
            android:background="@drawable/bg_boxrounded"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="338dp"
        android:layout_height="530dp"
        android:background="@drawable/bg_boxrounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaysemibold"
                android:text="Nama Lengkap (Sesuai KTP)"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt_1"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ralewayregular"
                android:hint="Masukkan Nama Lengkap"
                android:inputType="text"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaysemibold"
                android:text="Email"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt_2"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ralewayregular"
                android:hint="Masukkan Email"
                android:inputType="text"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaysemibold"
                android:text="Alamat"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt_3"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ralewayregular"
                android:hint="Masukkan Alamat"
                android:inputType="text"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaysemibold"
                android:text="Nomor NPWP(Pribadi)"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt_4"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ralewayregular"
                android:hint="Masukkan Nomor NPWP"
                android:inputType="text"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/ralewaysemibold"
                android:text="Kata Sandi"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edt_5"
                android:layout_width="307dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/ralewayregular"
                android:hint="Masukkan Kata Sandi (Akun)"
                android:inputType="text"
                android:textColor="@color/grey"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="48dp"
                android:width="120dp"
                android:background="@drawable/btn_shape"
                android:text="Simpan"
                android:textColor="@color/white" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/app_name">


            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="338dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_boxrounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="30dp"
                android:width="130dp"
                android:background="@drawable/btn_shape"
                android:text="Upload KTP"
                android:textColor="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="338dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_boxrounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:width="130dp"
            android:background="@drawable/btn_shape"
            android:text="Tentang Kami"
            android:textColor="@color/white" />
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
