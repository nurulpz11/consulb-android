<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/biru">


    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="28dp" />

    <ImageView
        android:layout_width="223dp"
        android:layout_height="204dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/gmbr1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/ktk1"
        android:layout_width="match_parent"
        android:layout_height="640dp"
        android:background="@drawable/bg_boxrounded"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/ralewaymedium"
                android:text="Difavoritkan : 6"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:layout_top="txt_1"
                android:fontFamily="@font/ralewaybold"
                android:text="SEPATU NIKE JORDAN"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/ralewaymedium"
                android:text="Harga Terbentuk"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/txt_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/ralewaysemibold"
                android:text="Rp 1.200.000"
                android:textColor="@color/purple_500"
                android:textSize="24dp" />



            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_2"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="104dp"
                android:layout_marginTop="50dp"
                android:width="206dp"
                android:height="73dp"
                android:background="@drawable/btn_shape"
                android:text="LIVE LELANG"
                android:textColor="@color/white" />



        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
